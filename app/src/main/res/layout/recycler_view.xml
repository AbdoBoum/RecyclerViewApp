<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="#F5F5F5"
        tool:listitem="@layout/etablissement_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_new_etab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/recycler"
        android:layout_alignBottom="@+id/recycler"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        app:backgroundTint="#6579EA"
        android:layout_marginBottom="19dp"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_margin="32dp" />


</RelativeLayout>